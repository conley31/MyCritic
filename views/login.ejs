<!DOCTYPE html>
<html>
<head>
    <% include ./partials/head %>
</head>
    <body>
        <header>
            <% include ./partials/header %>
        </header>
        <h1>MyCritic</h1>
        <form action="/register" method="post">
            <label for="email">Enter your email: </label>
            <input id="email" type="text" name="email">
            <label for="username"> Enter your desired username: </label>
            <input id="username" type="text" name="username" required pattern="[a-zA-Z0-9]{2,16}" title="Username must be alphanumeric and between 2 and 16 characters" >
            <label for="passwword"> Enter password: </label>
            <input id="password" type="password" name="password" required pattern="[a-zA-Z0-9!@#$%^&*_-]{6,16}"title="Password may contain alphanumerics and !@#$%^&*-_ special characters. Must be between 6 and 16 characters" >
            <input type="submit" value="OK">
        </form>
        <% if(typeof message != 'undefined') { %>
            <h2><%= message %></h2>
        <% } %>
    </body>
</html>
