<!DOCTYPE html>
<html>
<head>
	<% include ./partials/head %>
</head>
	<body>
	<header>
		<% include ./partials/header %>
    </header>
    <div id="userReviewList"></div>
    <button id ="followButton", onclick="followReq()">Follow</button>
    <button id = "unfollowButton", onclick="unfollowReq()">Unfollow</button>
    
	<script>
	function followReq() {
		document.getElementById('followButton').style.display = 'none';
		document.getElementById('unfollowButton').style.display = 'block';
		var request = new XMLHttpRequest();
		request.open('POST', "/follow");
		request.send();
	}
	function unfollowReq() {
		document.getElementById('followButton').style.display = 'block';
		document.getElementById('unfollowButton').style.display = 'none';
		var request = new XMLHttpRequest();
		request.open('POST', "/unfollow");
		request.send();
	}
	</script>
	</body>
	<% include ./partials/userScripts %>
</html>
